import json

class ConfigProvider:
  class __ConfigProvider:
    @property
    def base_url(self):
      return self.__base_url 

    @property
    def separator(self):
      return self.__separator

    @property
    def data(self):
      return self.__data

    def __init__(self):
      # Read the config file to get the stored data.
      with open('config.json') as json_data_file:
        self.__data = json.loads(json_data_file.read())

      self.__base_url = self.data['baseUrl'] 
      self.__separator = self.data['titleDescriptionSeparator']

  __instance = None

  @staticmethod
  def instance():
    if not ConfigProvider.__instance:
      ConfigProvider.__instance = ConfigProvider.__ConfigProvider()

    return ConfigProvider.__instance

  def __init__(self):
    pass

