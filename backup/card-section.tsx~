import FitComponent from "components/fit-component";

export interface ICardSectionProps {
  children?: ReactNode;
  title: string;
  subtitle?: string;
  icon?: ReactType<any>;
}

const CardSection: FC<ICardSectionProps> = ({ children, title, subtitle, icon }) => {
  return (
    <Card variant="outlined">
      <CardContent>
        <ProductSubtitle primary={title} secondary={subtitle} icon={icon} />
      </CardContent>
      <Divider />
      <CardContent>
        <FitComponent>{children}</FitComponent>
      </CardContent>
    </Card>
  )
}

export default CardSection;
