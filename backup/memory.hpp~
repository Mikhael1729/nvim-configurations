#ifndef MEMORY_HPP
#define MEMORY_HPP 

#include <iostream>
#include <string>

using namespace std;

class Memory {
  public:
    string name;
    string description;

    Memory(string, string);
    ~Memory();

    friend ostream& operator<<(ostream& strm, const Memory& memory) {
      return strm <<
        "Memory(" << 
          "name: " << memory.name << ", " <<
          "description: " << memory.description << 
        ")";
    }
};

#endif

