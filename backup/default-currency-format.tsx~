import React, { FC } from "react";
import NumberFormat from "react-number-format";

interface IDefaultCurrencyFormatProps {
  value: number | string;
  prefix?: string;
}

const DefaultCurrencyFormat: FC<IDefaultCurrencyFormatProps> = ({ value, prefix }) => {
  return (
    <NumberFormat
      styles={{ marginLeft: 0 }}
      value={value}
      displayType="text"
      thousandSeparator={true}
      decimalScale={2}
      prefix={prefix}
    />
  )
}

DefaultCurrencyFormat.defaultProps = {
  prefix: "$ "
}

export default DefaultCurrencyFormat;
