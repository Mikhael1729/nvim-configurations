import React, { FC } from "react";
import DateHelper from "./DateHelper";
import "./ConsumerNotification.css";

interface IConsumerNotificationProps {
  ammount: number;
  commerce: string;
  dateTime: Date;
  status: string;
}

const ConsumerNotification: FC<IConsumerNotificationProps> = (props) => {
  const { ammount, commerce, dateTime, status } = props;

  return (
    <div className="ConsumerNotification">
      <div className="Title">
        <h3>{commerce}</h3>
        <span>{DateHelper.dateToStringNamedFormat(dateTime)}</span>
      </div>

      <div className="Detail">
        <ul>
          <li>Monto: {ammount}</li>
          <li>Estado: {status}</li>
        </ul>
      </div>
    </div>
  );
}

export default ConsumerNotification;
