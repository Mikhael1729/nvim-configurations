import React, { FC, ReactType, ReactElement } from "react";
import { Box, Typography, Theme } from "@material-ui/core";
import { MonetizationOn } from "@material-ui/icons";
import {makeStyles} from "@material-ui/styles";

const useStyles = makeStyles((theme: Theme) => ({
  detailText: {
    marginLeft: theme.spacing(1)
  },
  icon: {
    fontSize: theme.typography.body1.fontSize,
    marginRight: theme.spacing(1),
  }
}));


export interface IInfoItem {
  icon?: ReactType<{className: string}>;
  label?: string | undefined;
  value: string | number | ReactElement | undefined;
}

const InfoItem: FC<IInfoItem> = ({ icon: Icon, label, value }) => {
  const classes = useStyles();

  return (
    <Box display="flex" flexDirection="row" alignItems="center">
      {Icon ? <Icon className={classes.icon} /> : null}
      <Typography
        variant="body2"
        component="p"
        className={label ? classes.detailText : undefined}
      >
        {label ? <>{label}: </> : null}
        {value ? <>{value}</> : null}
      </Typography>
    </Box>
  )
}

export default InfoItem;
