import React from "react"
import { Link, useStaticQuery, graphql } from "gatsby"
import Image from "gatsby-image"

import { rhythm, scale } from "../utils/typography"

const Layout = ({ location, title, children }) => {
  const query = useStaticQuery(graphql`
    query LayoutQuery {
      image: file(absolutePath: { regex: "/rule30.png/" }) {
        childImageSharp {
          fluid(maxWidth: 600, maxHeight: 150) {
            ...GatsbyImageSharpFluid
          }
        }
      }
    }
  `);

  const rootPath = `${__PATH_PREFIX__}/`;
  let header;

  if (location.pathname === rootPath) {
    header = (
      <>
        <Image
          fluid={query.image.childImageSharp.fluid}
          alt="Rule 30" />

        <h1 style={{ ...scale(1.5), marginBottom: rhythm(1.5), marginTop: 0, }} >
        <Link style={{ boxShadow: `none`, color: `inherit`, }} to={`/`} >
        {title}
        </Link>
        </h1>
      </>
    )
  } else {
    header = (
      <h3
        style={{
          fontFamily: `Montserrat, sans-serif`,
          marginTop: 0,
        }}
      >
        <Link
          style={{
            boxShadow: `none`,
            color: `inherit`,
          }}
          to={`/`}
        >
          {title}
        </Link>
      </h3>
    )
  }
  return (
    <div
      style={{
        marginLeft: `auto`,
        marginRight: `auto`,
        maxWidth: rhythm(24),
        padding: `${rhythm(1.5)} ${rhythm(3 / 4)}`,
      }}
    >
      <header>{header}</header>
      
      <main>{children}</main>
    </div>
  )
}

export default Layout
