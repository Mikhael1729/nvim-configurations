import React, { FC } from "react";
import { Typography, Box, Grid } from "@material-ui/core";
import Account from "models/account";
import ProductCard from "./product-card/product-card";
import { ProductsAndStoreProps } from ".";
import { navigate } from "gatsby"
import { RouteComponentProps } from "@reach/router";
import SC from "models/screen-component";

export interface IProductsProps extends RouteComponentProps {
}

const Products: SC<ProductsAndStoreProps> = ({ products }) => {
  async function onDetails(account: Account) {
    navigate(`/productos/${account.accountNumber}`);
  }

  return (
    <>
      <Typography variant="h3">Lista de productos</Typography>

      <Box m={3} />

      <Grid container={true} spacing={2}>
        {products.map((product: Account, index: number) => (
          <Grid item={true} key={index} xs={12} md={12} lg={6} xl={12}>
            <ProductCard account={product} onDetails={onDetails} />
          </Grid>
        ))}
      </Grid>
    </>
  )
}

Products.routeName = "/productos";

export default Products;
